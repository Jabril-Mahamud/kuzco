# AI CLI Configuration Example
# Copy this file to .env and modify as needed

# Default model to use (leave empty for interactive selection)
# Examples: llama3.2, codellama, mistral, deepseek-coder
DEFAULT_MODEL=

# Enable safe mode - creates backups and shows warnings for dangerous commands
# Options: true, false
SAFE_MODE=true

# Create backup files before editing (with .bak extension)
# Options: true, false
CREATE_BACKUPS=true

# Maximum file size to show in preview (in characters)
# Examples: 1000, 2000, 5000
MAX_PREVIEW_SIZE=2000

# Syntax highlighting theme for code display
# Options: monokai, github, solarized, dracula, one-dark, vs-code
DEFAULT_THEME=monokai

# Timeout for command execution in seconds
# Examples: 10, 30, 60
COMMAND_TIMEOUT=30

# Loading animation style during AI processing
# Options: dots, line, bounce, spinner, arrow, clock, hamburger
SPINNER_STYLE=spinner

# Animation speed in seconds (lower = faster)
# Examples: 0.05, 0.1, 0.3
ANIMATION_SPEED=0.1

# Commands that exit chat mode (comma-separated, no spaces)
# Examples: exit,quit,bye,goodbye,stop
EXIT_COMMANDS=exit,quit,bye,goodbye

# Commands that require safety warnings (comma-separated, no spaces)
# Examples: sudo,su,rm,del,format
SUDO_PREFIXES=sudo,su
